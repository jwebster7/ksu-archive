<!doctype html>
<html>
  <head>
    <title>Create Arrangement</title>
    <link href="/static/kistners.css" rel="stylesheet"/>
  </head>
  <body>
    <h1>Create Arrangement</h1>
      <form method="POST" action="/create-arrangement" enctype="multipart/form-data">
      <div class="error-message">
        <%= errorMessage %>
      </div>   
        
        <fieldset>
          
          <label for="name">Name:</label>
          <input type="text" name="name" value="" required/>
          <br>
          
          <label for="description">Description:</label>
          <input type="text" name="description" value="" required/>
          <br>
          
          <input type="file" name="image" required/>
          <br>
          
          <input type="submit" value="Submit Arrangement"/>
         
        </fieldset> 
        
      </form>
  </body>
</html>